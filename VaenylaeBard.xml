    <Size>
      <AbsDimension x="340" y="20"/>
    </Size>
    <Scripts>
      <OnLoad>
        this:SetFont("Fonts\\FRIZQT__.ttf", 10)
      </OnLoad>
      <OnClick>
        VaenylaeBard.SelectSong(this.songName)
      </OnClick>
    </Scripts>
    <NormalText inherits="GameFontNormalSmall">
      <Anchors>
        <Anchor point="LEFT">
          <Offset>
            <AbsDimension x="5" y="0"/>
          </Offset>
        </Anchor>
      </Anchors>
    </NormalText>
    <HighlightText inherits="GameFontHighlightSmall">
      <Anchors>
        <Anchor point="LEFT">
          <Offset>
            <AbsDimension x="5" y="0"/>
          </Offset>
        </Anchor>
      </Anchors>
    </HighlightText>
    <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
  </Button>

