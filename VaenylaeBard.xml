<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

    <!-- Main Bard Manager Frame -->
    <Frame name="VaenylaeBardMainFrame" movable="true" enableMouse="true" hidden="true" frameStrata="MEDIUM">
        <Size>
            <AbsDimension x="350" y="400"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" 
                 edgeFile="Interface\DialogFrame\UI-DialogBox-Border" 
                 tile="true">
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
        </Backdrop>
        
        <!-- Title -->
        <FontString name="$parentTitle" inherits="GameFontNormalLarge" text="Vaenylae Bard Manager">
            <Anchors>
                <Anchor point="TOP" y="-15"/>
            </Anchors>
        </FontString>
        
        <!-- Close Button -->
        <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
            <Anchors>
                <Anchor point="TOPRIGHT" x="-5" y="-5"/>
            </Anchors>
        </Button>
        
        <!-- Song List Area -->
        <ScrollFrame name="$parentSongScroll" inherits="UIPanelScrollFrameTemplate">
            <Size>
                <AbsDimension x="300" y="280"/>
            </Size>
            <Anchors>
                <Anchor point="TOP" y="-45"/>
            </Anchors>
            <ScrollChild>
                <Frame name="VaenylaeBardSongList">
                    <Size>
                        <AbsDimension x="300" y="280"/>
                    </Size>
                </Frame>
            </ScrollChild>
        </ScrollFrame>
        
        <!-- Add Song Button -->
        <Button name="$parentAddSongButton" inherits="UIPanelButtonTemplate" text="Add Song">
            <Size>
                <AbsDimension x="100" y="25"/>
            </Size>
            <Anchors>
                <Anchor point="BOTTOMLEFT" x="20" y="45"/>
            </Anchors>
        </Button>
        
        <!-- Remove Song Button -->
        <Button name="$parentRemoveSongButton" inherits="UIPanelButtonTemplate" text="Remove Song">
            <Size>
                <AbsDimension x="100" y="25"/>
            </Size>
            <Anchors>
                <Anchor point="BOTTOMRIGHT" x="-20" y="45"/>
            </Anchors>
        </Button>
        
        <!-- Instructions -->
        <FontString inherits="GameFontNormal" text="Click a song to edit its lines">
            <Anchors>
                <Anchor point="BOTTOM" y="20"/>
            </Anchors>
        </FontString>
        
        <Scripts>
            <OnLoad>
                this:RegisterForDrag("LeftButton");
            </OnLoad>
            <OnDragStart>
                this:StartMoving();
            </OnDragStart>
            <OnDragStop>
                this:StopMovingOrSizing();
            </OnDragStop>
        </Scripts>
    </Frame>

    <!-- Line Editor Frame -->
    <Frame name="VaenylaeBardLineEditorFrame" movable="true" enableMouse="true" hidden="true" frameStrata="HIGH">
        <Size>
            <AbsDimension x="350" y="400"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER" x="200" y="0"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" 
                 edgeFile="Interface\DialogFrame\UI-DialogBox-Border" 
                 tile="true">
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
        </Backdrop>
        
        <!-- Title -->
        <FontString name="$parentTitle" inherits="GameFontNormalLarge" text="Song Line Editor">
            <Anchors>
                <Anchor point="TOP" y="-15"/>
            </Anchors>
        </FontString>
        
        <!-- Close Button -->
        <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
            <Anchors>
                <Anchor point="TOPRIGHT" x="-5" y="-5"/>
            </Anchors>
        </Button>
        
        <!-- Line List Area -->
        <Frame name="VaenylaeBardLineList">
            <Size>
                <AbsDimension x="300" y="120"/>
            </Size>
            <Anchors>
                <Anchor point="TOP" y="-50"/>
            </Anchors>
        </Frame>
        
        <!-- Line Text Label -->
        <FontString inherits="GameFontNormal" text="Line Text:">
            <Anchors>
                <Anchor point="TOPLEFT" x="20" y="-180"/>
            </Anchors>
        </FontString>
        
        <!-- Line Text Input -->
        <EditBox name="VaenylaeBardLineTextBox" inherits="InputBoxTemplate" autoFocus="false">
            <Size>
                <AbsDimension x="280" y="32"/>
            </Size>
            <Anchors>
                <Anchor point="TOP" y="-200"/>
            </Anchors>
            <FontString inherits="ChatFontNormal"/>
        </EditBox>
        
        <!-- Emote Label -->
        <FontString inherits="GameFontNormal" text="Emote:">
            <Anchors>
                <Anchor point="TOPLEFT" x="20" y="-240"/>
            </Anchors>
        </FontString>
        
        <!-- Emote Input -->
        <EditBox name="VaenylaeBardLineEmoteBox" inherits="InputBoxTemplate" autoFocus="false">
            <Size>
                <AbsDimension x="280" y="32"/>
            </Size>
            <Anchors>
                <Anchor point="TOP" y="-260"/>
            </Anchors>
            <FontString inherits="ChatFontNormal"/>
        </EditBox>
        
        <!-- Delay Label -->
        <FontString inherits="GameFontNormal" text="Delay (seconds):">
            <Anchors>
                <Anchor point="TOPLEFT" x="20" y="-300"/>
            </Anchors>
        </FontString>
        
        <!-- Delay Input -->
        <EditBox name="VaenylaeBardLineDelayBox" inherits="InputBoxTemplate" autoFocus="false">
            <Size>
                <AbsDimension x="100" y="32"/>
            </Size>
            <Anchors>
                <Anchor point="TOP" y="-320"/>
            </Anchors>
            <FontString inherits="ChatFontNormal"/>
            <Scripts>
                <OnLoad>
                    this:SetText("3");
                </OnLoad>
            </Scripts>
        </EditBox>
        
        <!-- Save Line Button -->
        <Button name="VaenylaeBardSaveLineButton" inherits="UIPanelButtonTemplate" text="Save Line">
            <Size>
                <AbsDimension x="120" y="25"/>
            </Size>
            <Anchors>
                <Anchor point="BOTTOM" x="-65" y="20"/>
            </Anchors>
        </Button>
        
        <!-- Add New Line Button -->
        <Button name="$parentAddLineButton" inherits="UIPanelButtonTemplate" text="Add New Line">
            <Size>
                <AbsDimension x="120" y="25"/>
            </Size>
            <Anchors>
                <Anchor point="BOTTOM" x="65" y="20"/>
            </Anchors>
        </Button>
        
        <!-- Line Management Buttons -->
        <Button name="$parentUpButton" inherits="UIPanelButtonTemplate" text="Up">
            <Size>
                <AbsDimension x="50" y="20"/>
            </Size>
            <Anchors>
                <Anchor point="TOPLEFT" x="20" y="-190"/>
            </Anchors>
        </Button>
        
        <Button name="$parentDownButton" inherits="UIPanelButtonTemplate" text="Down">
            <Size>
                <AbsDimension x="50" y="20"/>
            </Size>
            <Anchors>
                <Anchor point="TOPLEFT" x="80" y="-190"/>
            </Anchors>
        </Button>
        
        <Button name="$parentDeleteButton" inherits="UIPanelButtonTemplate" text="Del">
            <Size>
                <AbsDimension x="50" y="20"/>
            </Size>
            <Anchors>
                <Anchor point="TOPLEFT" x="140" y="-190"/>
            </Anchors>
        </Button>
        
        <Scripts>
            <OnLoad>
                this:RegisterForDrag("LeftButton");
            </OnLoad>
            <OnDragStart>
                this:StartMoving();
            </OnDragStart>
            <OnDragStop>
                this:StopMovingOrSizing();
            </OnDragStop>
        </Scripts>
    </Frame>

    <!-- Add Song Dialog -->
    <Frame name="VaenylaeBardAddSongDialog" movable="true" enableMouse="true" hidden="true" frameStrata="TOOLTIP">
        <Size>
            <AbsDimension x="300" y="150"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" 
                 edgeFile="Interface\DialogFrame\UI-DialogBox-Border" 
                 tile="true">
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
        </Backdrop>
        
        <!-- Title -->
        <FontString inherits="GameFontNormalLarge" text="Add Song">
            <Anchors>
                <Anchor point="TOP" y="-15"/>
            </Anchors>
        </FontString>
        
        <!-- Label -->
        <FontString inherits="GameFontNormal" text="Enter song name:">
            <Anchors>
                <Anchor point="TOP" y="-45"/>
            </Anchors>
        </FontString>
        
        <!-- Song Name Input -->
        <EditBox name="VaenylaeBardAddSongEditBox" inherits="InputBoxTemplate" autoFocus="false">
            <Size>
                <AbsDimension x="250" y="32"/>
            </Size>
            <Anchors>
                <Anchor point="TOP" y="-70"/>
            </Anchors>
            <FontString inherits="ChatFontNormal"/>
        </EditBox>
        
        <!-- Add Button -->
        <Button name="$parentAddButton" inherits="UIPanelButtonTemplate" text="Add">
            <Size>
                <AbsDimension x="80" y="25"/>
            </Size>
            <Anchors>
                <Anchor point="BOTTOM" x="-45" y="15"/>
            </Anchors>
        </Button>
        
        <!-- Cancel Button -->
        <Button name="$parentCancelButton" inherits="UIPanelButtonTemplate" text="Cancel">
            <Size>
                <AbsDimension x="80" y="25"/>
            </Size>
            <Anchors>
                <Anchor point="BOTTOM" x="45" y="15"/>
            </Anchors>
        </Button>
        
        <Scripts>
            <OnLoad>
                this:RegisterForDrag("LeftButton");
            </OnLoad>
            <OnDragStart>
                this:StartMoving();
            </OnDragStart>
            <OnDragStop>
                this:StopMovingOrSizing();
            </OnDragStop>
        </Scripts>
    </Frame>

</Ui>