<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

    <!-- Main Bard Manager Frame -->
    <Frame name="VaenylaeBardMainFrame" movable="true" enableMouse="true" hidden="true" frameStrata="MEDIUM">
        <Size>
            <AbsDimension x="350" y="400"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" 
                 edgeFile="Interface\DialogFrame\UI-DialogBox-Border" 
                 tile="true">
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
        </Backdrop>
        
        <!-- Title -->
        <FontString name="$parentTitle" inherits="GameFontNormalLarge" text="Vaenylae Bard Manager">
            <Anchors>
                <Anchor point="TOP" y="-15"/>
            </Anchors>
        </FontString>
        
        <!-- Instructions -->
        <FontString inherits="GameFontNormal" text="Click a song to edit its lines">
            <Anchors>
                <Anchor point="BOTTOM" y="20"/>
            </Anchors>
        </FontString>
        
        <Scripts>
            <OnLoad>
                this:RegisterForDrag("LeftButton");
            </OnLoad>
            <OnDragStart>
                this:StartMoving();
            </OnDragStart>
            <OnDragStop>
                this:StopMovingOrSizing();
            </OnDragStop>
        </Scripts>
    </Frame>

    <!-- Line Editor Frame -->
    <Frame name="VaenylaeBardLineEditorFrame" movable="true" enableMouse="true" hidden="true" frameStrata="HIGH">
        <Size>
            <AbsDimension x="350" y="400"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER" x="200" y="0"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" 
                 edgeFile="Interface\DialogFrame\UI-DialogBox-Border" 
                 tile="true">
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
        </Backdrop>
        
        <!-- Title -->
        <FontString name="$parentTitle" inherits="GameFontNormalLarge" text="Song Line Editor">
            <Anchors>
                <Anchor point="TOP" y="-15"/>
            </Anchors>
        </FontString>
        
        <!-- Line List Area -->
        <Frame name="VaenylaeBardLineList">
            <Size>
                <AbsDimension x="300" y="120"/>
            </Size>
            <Anchors>
                <Anchor point="TOP" y="-50"/>
            </Anchors>
        </Frame>
        
        <!-- Line Text Label -->
        <FontString inherits="GameFontNormal" text="Line Text:">
            <Anchors>
                <Anchor point="TOPLEFT" x="20" y="-180"/>
            </Anchors>
        </FontString>
        
        <!-- Emote Label -->
        <FontString inherits="GameFontNormal" text="Emote:">
            <Anchors>
                <Anchor point="TOPLEFT" x="20" y="-240"/>
            </Anchors>
        </FontString>
        
        <!-- Delay Label -->
        <FontString inherits="GameFontNormal" text="Delay (seconds):">
            <Anchors>
                <Anchor point="TOPLEFT" x="20" y="-300"/>
            </Anchors>
        </FontString>
        
        <!-- Save Line Button -->
        <Button name="VaenylaeBardSaveLineButton" inherits="UIPanelButtonTemplate" text="Save Line">
            <Size>
                <AbsDimension x="120" y="25"/>
            </Size>
            <Anchors>
                <Anchor point="BOTTOM" x="-65" y="20"/>
            </Anchors>
        </Button>
        
        <Scripts>
            <OnLoad>
                this:RegisterForDrag("LeftButton");
            </OnLoad>
            <OnDragStart>
                this:StartMoving();
            </OnDragStart>
            <OnDragStop>
                this:StopMovingOrSizing();
            </OnDragStop>
        </Scripts>
    </Frame>

    <!-- Add Song Dialog -->
    <Frame name="VaenylaeBardAddSongDialog" movable="true" enableMouse="true" hidden="true" frameStrata="TOOLTIP">
        <Size>
            <AbsDimension x="300" y="150"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" 
                 edgeFile="Interface\DialogFrame\UI-DialogBox-Border" 
                 tile="true">
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
        </Backdrop>
        
        <!-- Title -->
        <FontString inherits="GameFontNormalLarge" text="Add Song">
            <Anchors>
                <Anchor point="TOP" y="-15"/>
            </Anchors>
        </FontString>
        
        <!-- Label -->
        <FontString inherits="GameFontNormal" text="Enter song name:">
            <Anchors>
                <Anchor point="TOP" y="-45"/>
            </Anchors>
        </FontString>
        
        <Scripts>
            <OnLoad>
                this:RegisterForDrag("LeftButton");
            </OnLoad>
            <OnDragStart>
                this:StartMoving();
            </OnDragStart>
            <OnDragStop>
                this:StopMovingOrSizing();
            </OnDragStop>
        </Scripts>
    </Frame>

</Ui>