<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">

  <!-- Song List Button Template (following TurtleRP_DirectoryButtonTemplate pattern) -->
  <Button name="VaenylaeBardSongButtonTemplate" virtual="true">
    <Size>
      <AbsDimension x="340" y="20"/>
    </Size>
    <Scripts>
      <OnLoad>
        this:SetFont("Fonts\\FRIZQT__.ttf", 10)
      </OnLoad>
      <OnClick>
        VaenylaeBard.SelectSong(this.songName)
      </OnClick>
    </Scripts>
    <NormalText inherits="GameFontNormalSmall">
      <Anchors>
        <Anchor point="LEFT">
          <Offset>
            <AbsDimension x="5" y="0"/>
          </Offset>
        </Anchor>
      </Anchors>
    </NormalText>
    <HighlightText inherits="GameFontHighlightSmall">
      <Anchors>
        <Anchor point="LEFT">
          <Offset>
            <AbsDimension x="5" y="0"/>
          </Offset>
        </Anchor>
      </Anchors>
    </HighlightText>
    <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
  </Button>

  <!-- Line List Button Template -->
  <Button name="VaenylaeBardLineButtonTemplate" virtual="true">
    <Size>
      <AbsDimension x="430" y="18"/>
    </Size>
    <Scripts>
      <OnLoad>
        this:SetFont("Fonts\\FRIZQT__.ttf", 9)
      </OnLoad>
      <OnClick>
        VaenylaeBard.SelectLine(this.lineIndex)
      </OnClick>
    </Scripts>
    <NormalText inherits="GameFontNormalSmall">
      <Anchors>
        <Anchor point="LEFT">
          <Offset>
            <AbsDimension x="5" y="0"/>
          </Offset>
        </Anchor>
      </Anchors>
    </NormalText>
    <HighlightText inherits="GameFontHighlightSmall">
      <Anchors>
        <Anchor point="LEFT">
          <Offset>
            <AbsDimension x="5" y="0"/>
          </Offset>
        </Anchor>
      </Anchors>
    </HighlightText>
    <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
  </Button>

  <!-- Main Bard Manager Frame (following TurtleRP backdrop pattern) -->
  <Frame name="VaenylaeBardMainFrame" toplevel="true" parent="UIParent" enableMouse="true" movable="true" hidden="true">
    <Size>
      <AbsDimension x="400" y="500"/>
    </Size>
    <Anchors>
      <Anchor point="CENTER">
        <Offset>
          <AbsDimension x="0" y="0"/>
        </Offset>
      </Anchor>
    </Anchors>
    <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
      <BackgroundInsets>
        <AbsInset left="11" right="12" top="12" bottom="11"/>
      </BackgroundInsets>
      <TileSize>
        <AbsValue val="32"/>
      </TileSize>
      <EdgeSize>
        <AbsValue val="32"/>
      </EdgeSize>
    </Backdrop>
    <Scripts>
      <OnLoad>
        this:RegisterForDrag("LeftButton");
      </OnLoad>
      <OnDragStart>
        this:StartMoving();
      </OnDragStart>
      <OnDragStop>
        this:StopMovingOrSizing();
      </OnDragStop>
    </Scripts>
    <Layers>
      <Layer level="OVERLAY">
        <FontString name="$parent_Title" inherits="GameFontNormalLarge" text="Vaenylae Bard">
          <Anchors>
            <Anchor point="TOP">
              <Offset>
                <AbsDimension x="0" y="-25"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
        <Texture name="$parent_Icon" file="Interface\Icons\INV_Misc_Drum_01">
          <Size>
            <AbsDimension x="24" y="24"/>
          </Size>
          <Anchors>
            <Anchor point="RIGHT" relativeTo="$parent_Title" relativePoint="LEFT">
              <Offset>
                <AbsDimension x="-5" y="0"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <Frames>
      <!-- Close Button -->
      <Button name="$parent_CloseButton" inherits="UIPanelCloseButton">
        <Anchors>
          <Anchor point="TOPRIGHT">
            <Offset>
              <AbsDimension x="-8" y="-8"/>
            </Offset>
          </Anchor>
        </Anchors>
      </Button>

      <!-- Song List ScrollFrame (following TurtleRP pattern) -->
      <ScrollFrame name="$parent_SongScrollBox" inherits="FauxScrollFrameTemplate">
        <Size>
          <AbsDimension x="360" y="320"/>
        </Size>
        <Anchors>
          <Anchor point="TOP" relativeTo="$parent" relativePoint="TOP">
            <Offset>
              <AbsDimension x="0" y="-60"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnVerticalScroll>
            FauxScrollFrame_OnVerticalScroll(20, VaenylaeBard.SongScrollBar_Update);
          </OnVerticalScroll>
          <OnShow>
            VaenylaeBard.SongScrollBar_Update()
          </OnShow>
        </Scripts>
        <Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" edgeFile="Interface\ChatFrame\ChatFrameBackground" tile="true">
          <EdgeSize>
            <AbsValue val="0.5"/>
          </EdgeSize>
          <Color r="1" g="1" b="1" a="0.1"/>
          <BorderColor r="255" g="255" b="255" a="0"/>
        </Backdrop>
      </ScrollFrame>

      <!-- Song Management Buttons -->
      <Button name="$parent_AddSongButton" inherits="UIPanelButtonGrayTemplate" text="Add Song">
        <Size>
          <AbsDimension x="80" y="25"/>
        </Size>
        <Anchors>
          <Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="25" y="50"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnLoad>
            this:SetFont("Fonts\\FRIZQT__.ttf", 10)
          </OnLoad>
          <OnClick>
            VaenylaeBard.ShowAddSongDialog()
          </OnClick>
        </Scripts>
      </Button>

      <Button name="$parent_RemoveSongButton" inherits="UIPanelButtonGrayTemplate" text="Remove">
        <Size>
          <AbsDimension x="70" y="25"/>
        </Size>
        <Anchors>
          <Anchor point="LEFT" relativeTo="$parent_AddSongButton" relativePoint="RIGHT">
            <Offset>
              <AbsDimension x="10" y="0"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnLoad>
            this:SetFont("Fonts\\FRIZQT__.ttf", 10)
          </OnLoad>
          <OnClick>
            VaenylaeBard.RemoveSelectedSong()
          </OnClick>
        </Scripts>
      </Button>

      <Button name="$parent_EditSongButton" inherits="UIPanelButtonGrayTemplate" text="Edit Lines">
        <Size>
          <AbsDimension x="80" y="25"/>
        </Size>
        <Anchors>
          <Anchor point="LEFT" relativeTo="$parent_RemoveSongButton" relativePoint="RIGHT">
            <Offset>
              <AbsDimension x="10" y="0"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnLoad>
            this:SetFont("Fonts\\FRIZQT__.ttf", 10)
          </OnLoad>
          <OnClick>
            VaenylaeBard.OpenLineEditor()
          </OnClick>
        </Scripts>
      </Button>

      <Button name="$parent_PlaySongButton" inherits="UIPanelButtonGrayTemplate" text="Play">
        <Size>
          <AbsDimension x="60" y="25"/>
        </Size>
        <Anchors>
          <Anchor point="LEFT" relativeTo="$parent_EditSongButton" relativePoint="RIGHT">
            <Offset>
              <AbsDimension x="10" y="0"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnLoad>
            this:SetFont("Fonts\\FRIZQT__.ttf", 10)
          </OnLoad>
          <OnClick>
            VaenylaeBard.PlaySelectedSong()
          </OnClick>
        </Scripts>
      </Button>

      <!-- Status Text -->
      <FontString name="$parent_StatusText" inherits="GameFontNormalSmall" text="Select a song from the list above">
        <Anchors>
          <Anchor point="BOTTOM" relativeTo="$parent" relativePoint="BOTTOM">
            <Offset>
              <AbsDimension x="0" y="20"/>
            </Offset>
          </Anchor>
        </Anchors>
      </FontString>
    </Frames>
  </Frame>

  <!-- Add Song Dialog (following TurtleRP_IconSelector pattern) -->
  <Frame name="VaenylaeBardAddSongDialog" toplevel="true" parent="UIParent" movable="true" enableMouse="true" frameStrata="DIALOG" hidden="true">
    <Size>
      <AbsDimension x="300" y="150"/>
    </Size>
    <Anchors>
      <Anchor point="CENTER">
        <Offset>
          <AbsDimension x="0" y="0"/>
        </Offset>
      </Anchor>
    </Anchors>
    <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
      <BackgroundInsets>
        <AbsInset left="11" right="12" top="12" bottom="11"/>
      </BackgroundInsets>
      <TileSize>
        <AbsValue val="32"/>
      </TileSize>
      <EdgeSize>
        <AbsValue val="32"/>
      </EdgeSize>
    </Backdrop>
    <Scripts>
      <OnLoad>
        this:RegisterForDrag("LeftButton");
      </OnLoad>
      <OnDragStart>
        this:StartMoving();
      </OnDragStart>
      <OnDragStop>
        this:StopMovingOrSizing();
      </OnDragStop>
    </Scripts>
    <Frames>
      <!-- Close button -->
      <Button name="$parent_CloseButton" inherits="UIPanelCloseButton">
        <Size>
          <AbsDimension x="20" y="20"/>
        </Size>
        <Anchors>
          <Anchor point="TOPRIGHT">
            <Offset>
              <AbsDimension x="-8" y="-8"/>
            </Offset>
          </Anchor>
        </Anchors>
      </Button>

      <!-- Content Frame (following TurtleRP pattern) -->
      <Frame name="$parent_Content">
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="15" y="-15"/>
            </Offset>
          </Anchor>
          <Anchor point="BOTTOMRIGHT">
            <Offset>
              <AbsDimension x="-15" y="15"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="OVERLAY">
            <!-- Title -->
            <FontString name="$parent_Title" inherits="GameFontNormal" text="Add New Song">
              <Anchors>
                <Anchor point="TOP">
                  <Offset>
                    <AbsDimension x="0" y="-15"/>
                  </Offset>
                </Anchor>
              </Anchors>
            </FontString>

            <!-- Label for input -->
            <FontString name="$parent_Label" inherits="GameFontNormal" text="Song Name:">
              <Anchors>
                <Anchor point="TOP" relativeTo="$parent_Title" relativePoint="BOTTOM">
                  <Offset>
                    <AbsDimension x="0" y="-15"/>
                  </Offset>
                </Anchor>
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
        <Frames>
          <!-- Song name input (following TurtleRP pattern exactly) -->
          <EditBox name="$parent_EditBox" alpha="1.0" inherits="InputBoxTemplate" visible="true" enableMouse="true" autoFocus="false">
            <Size>
              <AbsDimension x="220" y="20"/>
            </Size>
            <Anchors>
              <Anchor point="TOP" relativeTo="$parent_Label" relativePoint="BOTTOM">
                <Offset>
                  <AbsDimension x="0" y="-5"/>
                </Offset>
              </Anchor>
            </Anchors>
            <FontString inherits="ChatFontNormal"/>
            <Scripts>
              <OnLoad>
                this:SetMaxLetters(50)
                this:Show()
                this:SetAlpha(1.0)
              </OnLoad>
            </Scripts>
          </EditBox>

          <!-- Add button -->
          <Button name="$parent_AddButton" inherits="UIPanelButtonGrayTemplate" text="Add Song">
            <Size>
              <AbsDimension x="80" y="25"/>
            </Size>
            <Anchors>
              <Anchor point="BOTTOMLEFT">
                <Offset>
                  <AbsDimension x="35" y="10"/>
                </Offset>
              </Anchor>
            </Anchors>
            <Scripts>
              <OnLoad>
                this:SetFont("Fonts\\FRIZQT__.ttf", 10)
              </OnLoad>
            </Scripts>
          </Button>

          <!-- Cancel button -->
          <Button name="$parent_CancelButton" inherits="UIPanelButtonGrayTemplate" text="Cancel">
            <Size>
              <AbsDimension x="80" y="25"/>
            </Size>
            <Anchors>
              <Anchor point="BOTTOMRIGHT">
                <Offset>
                  <AbsDimension x="-35" y="10"/>
                </Offset>
              </Anchor>
            </Anchors>
            <Scripts>
              <OnLoad>
                this:SetFont("Fonts\\FRIZQT__.ttf", 10)
              </OnLoad>
            </Scripts>
          </Button>
        </Frames>
      </Frame>
    </Frames>
  </Frame>

  <!-- Line Editor Frame (following TurtleRP backdrop pattern) -->
  <Frame name="VaenylaeBardLineEditorFrame" toplevel="true" parent="UIParent" enableMouse="true" movable="true" hidden="true">
    <Size>
      <AbsDimension x="500" y="600"/>
    </Size>
    <Anchors>
      <Anchor point="CENTER">
        <Offset>
          <AbsDimension x="250" y="0"/>
        </Offset>
      </Anchor>
    </Anchors>
    <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
      <BackgroundInsets>
        <AbsInset left="11" right="12" top="12" bottom="11"/>
      </BackgroundInsets>
      <TileSize>
        <AbsValue val="32"/>
      </TileSize>
      <EdgeSize>
        <AbsValue val="32"/>
      </EdgeSize>
    </Backdrop>
    <Scripts>
      <OnLoad>
        this:RegisterForDrag("LeftButton");
      </OnLoad>
      <OnDragStart>
        this:StartMoving();
      </OnDragStart>
      <OnDragStop>
        this:StopMovingOrSizing();
      </OnDragStop>
    </Scripts>
    <Layers>
      <Layer level="OVERLAY">
        <FontString name="$parent_Title" inherits="GameFontNormalLarge" text="Song Line Editor">
          <Anchors>
            <Anchor point="TOP">
              <Offset>
                <AbsDimension x="0" y="-25"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
        <Texture name="$parent_Icon" file="Interface\Icons\INV_Misc_Note_01">
          <Size>
            <AbsDimension x="24" y="24"/>
          </Size>
          <Anchors>
            <Anchor point="RIGHT" relativeTo="$parent_Title" relativePoint="LEFT">
              <Offset>
                <AbsDimension x="-5" y="0"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <Frames>
      <!-- Close Button -->
      <Button name="$parent_CloseButton" inherits="UIPanelCloseButton">
        <Anchors>
          <Anchor point="TOPRIGHT">
            <Offset>
              <AbsDimension x="-27" y="-14"/>
            </Offset>
          </Anchor>
        </Anchors>
      </Button>

      <!-- Line List ScrollFrame -->
      <ScrollFrame name="$parent_LineScrollBox" inherits="FauxScrollFrameTemplate">
        <Size>
          <AbsDimension x="450" y="200"/>
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
            <Offset>
              <AbsDimension x="20" y="-80"/>
            </Offset>
          </Anchor>
          <Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
            <Offset>
              <AbsDimension x="-35" y="-80"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnVerticalScroll>
            FauxScrollFrame_OnVerticalScroll(18, VaenylaeBard.LineScrollBar_Update);
          </OnVerticalScroll>
          <OnShow>
            VaenylaeBard.LineScrollBar_Update()
          </OnShow>
        </Scripts>
        <Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" edgeFile="Interface\ChatFrame\ChatFrameBackground" tile="true">
          <EdgeSize>
            <AbsValue val="0.5"/>
          </EdgeSize>
          <Color r="1" g="1" b="1" a="0.1"/>
          <BorderColor r="255" g="255" b="255" a="0"/>
        </Backdrop>
      </ScrollFrame>

      <!-- Line Management Buttons -->
      <Button name="$parent_AddLineButton" inherits="UIPanelButtonGrayTemplate" text="Add Line">
        <Size>
          <AbsDimension x="70" y="22"/>
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_LineScrollBox" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="0" y="-10"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnLoad>
            this:SetFont("Fonts\\FRIZQT__.ttf", 9)
          </OnLoad>
          <OnClick>
            VaenylaeBard.AddNewLine()
          </OnClick>
        </Scripts>
      </Button>

      <Button name="$parent_MoveUpButton" inherits="UIPanelButtonGrayTemplate" text="Move Up">
        <Size>
          <AbsDimension x="70" y="22"/>
        </Size>
        <Anchors>
          <Anchor point="LEFT" relativeTo="$parent_AddLineButton" relativePoint="RIGHT">
            <Offset>
              <AbsDimension x="5" y="0"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnLoad>
            this:SetFont("Fonts\\FRIZQT__.ttf", 9)
          </OnLoad>
          <OnClick>
            VaenylaeBard.MoveLineUp()
          </OnClick>
        </Scripts>
      </Button>

      <Button name="$parent_MoveDownButton" inherits="UIPanelButtonGrayTemplate" text="Move Down">
        <Size>
          <AbsDimension x="80" y="22"/>
        </Size>
        <Anchors>
          <Anchor point="LEFT" relativeTo="$parent_MoveUpButton" relativePoint="RIGHT">
            <Offset>
              <AbsDimension x="5" y="0"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnLoad>
            this:SetFont("Fonts\\FRIZQT__.ttf", 9)
          </OnLoad>
          <OnClick>
            VaenylaeBard.MoveLineDown()
          </OnClick>
        </Scripts>
      </Button>

      <Button name="$parent_DeleteButton" inherits="UIPanelButtonGrayTemplate" text="Delete">
        <Size>
          <AbsDimension x="60" y="22"/>
        </Size>
        <Anchors>
          <Anchor point="LEFT" relativeTo="$parent_MoveDownButton" relativePoint="RIGHT">
            <Offset>
              <AbsDimension x="5" y="0"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnLoad>
            this:SetFont("Fonts\\FRIZQT__.ttf", 9)
          </OnLoad>
          <OnClick>
            VaenylaeBard.DeleteSelectedLine()
          </OnClick>
        </Scripts>
      </Button>

      <Button name="$parent_PreviewButton" inherits="UIPanelButtonGrayTemplate" text="Preview">
        <Size>
          <AbsDimension x="70" y="22"/>
        </Size>
        <Anchors>
          <Anchor point="LEFT" relativeTo="$parent_DeleteButton" relativePoint="RIGHT">
            <Offset>
              <AbsDimension x="15" y="0"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnLoad>
            this:SetFont("Fonts\\FRIZQT__.ttf", 9)
          </OnLoad>
          <OnClick>
            VaenylaeBard.PreviewSelectedLine()
          </OnClick>
        </Scripts>
      </Button>

      <!-- Line Editor Section (following TurtleRP_CharacterDetails_Notes pattern) -->
      <Frame name="$parent_EditSection" enableMouse="true">
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent_AddLineButton" relativePoint="BOTTOMLEFT">
            <Offset>
              <AbsDimension x="0" y="-20"/>
            </Offset>
          </Anchor>
          <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT">
            <Offset>
              <AbsDimension x="-35" y="75"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" edgeFile="Interface\ChatFrame\ChatFrameBackground" tile="true">
          <EdgeSize>
            <AbsValue val="0.5"/>
          </EdgeSize>
          <Color r="0" g="0" b="0" a="0.3"/>
          <BorderColor r="255" g="255" b="255" a="0"/>
        </Backdrop>
        <Frames>
          <!-- Save Button -->
          <Button name="$parent_SaveButton" inherits="UIPanelButtonGrayTemplate" text="Save Line">
            <Size>
              <AbsDimension x="80" y="25"/>
            </Size>
            <Anchors>
              <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT">
                <Offset>
                  <AbsDimension x="-20" y="20"/>
                </Offset>
              </Anchor>
            </Anchors>
            <Scripts>
              <OnLoad>
                this:SetFont("Fonts\\FRIZQT__.ttf", 10)
              </OnLoad>
              <OnClick>
                VaenylaeBard.SaveCurrentLine()
              </OnClick>
            </Scripts>
          </Button>

          <!-- Clear Button -->
          <Button name="$parent_ClearButton" inherits="UIPanelButtonGrayTemplate" text="Clear">
            <Size>
              <AbsDimension x="60" y="25"/>
            </Size>
            <Anchors>
              <Anchor point="RIGHT" relativeTo="$parent_SaveButton" relativePoint="LEFT">
                <Offset>
                  <AbsDimension x="-10" y="0"/>
                </Offset>
              </Anchor>
            </Anchors>
            <Scripts>
              <OnLoad>
                this:SetFont("Fonts\\FRIZQT__.ttf", 10)
              </OnLoad>
              <OnClick>
                VaenylaeBard.ClearEditFields()
              </OnClick>
            </Scripts>
          </Button>

          <!-- Line Text Section -->
          <FontString name="$parent_LineTextLabel" inherits="GameFontNormal" text="Line Text (what to say):">
            <Anchors>
              <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
                <Offset>
                  <AbsDimension x="15" y="-15"/>
                </Offset>
              </Anchor>
            </Anchors>
          </FontString>

          <!-- Line Text ScrollFrame -->
          <ScrollFrame name="$parent_LineTextScrollBox" enableMouse="true" inherits="UIPanelScrollFrameTemplate">
            <Size>
              <AbsDimension x="400" y="80"/>
            </Size>
            <Anchors>
              <Anchor point="TOPLEFT" relativeTo="$parent_LineTextLabel" relativePoint="BOTTOMLEFT">
                <Offset>
                  <AbsDimension x="0" y="-5"/>
                </Offset>
              </Anchor>
            </Anchors>
            <Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" edgeFile="Interface\ChatFrame\ChatFrameBackground" tile="true">
              <EdgeSize>
                <AbsValue val="0.5"/>
              </EdgeSize>
              <Color r="0" g="0" b="0" a="0.3"/>
              <BorderColor r="255" g="255" b="255" a="0"/>
            </Backdrop>
            <Scripts>
              <OnMouseDown>
                VaenylaeBardLineEditorFrame_EditSection_LineTextScrollBox_LineTextInput:SetFocus()
              </OnMouseDown>
            </Scripts>
            <ScrollChild>
              <!-- Line Text Input Box -->
              <EditBox name="$parent_LineTextInput" visible="true" enableMouse="true" autoFocus="false">
                <Size>
                  <AbsDimension x="380" y="2000"/>
                </Size>
                <Anchors>
                  <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
                    <Offset>
                      <AbsDimension x="0" y="0"/>
                    </Offset>
                  </Anchor>
                  <Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
                    <Offset>
                      <AbsDimension x="0" y="0"/>
                    </Offset>
                  </Anchor>
                </Anchors>
                <FontString inherits="ChatFontNormal"/>
                <Scripts>
                  <OnLoad>
                    this:SetMultiLine(true)
                  </OnLoad>
                </Scripts>
              </EditBox>
            </ScrollChild>
          </ScrollFrame>

          <!-- Emote Section -->
          <FontString name="$parent_EmoteLabel" inherits="GameFontNormal" text="Emote (optional):">
            <Anchors>
              <Anchor point="TOPLEFT" relativeTo="$parent_LineTextScrollBox" relativePoint="BOTTOMLEFT">
                <Offset>
                  <AbsDimension x="0" y="-15"/>
                </Offset>
              </Anchor>
            </Anchors>
          </FontString>

          <EditBox name="$parent_EmoteInput" maxLetters="100" inherits="InputBoxTemplate" visible="true" enableMouse="true" autoFocus="false">
            <Size>
              <AbsDimension x="250" y="20"/>
            </Size>
            <Anchors>
              <Anchor point="TOPLEFT" relativeTo="$parent_EmoteLabel" relativePoint="BOTTOMLEFT">
                <Offset>
                  <AbsDimension x="0" y="-5"/>
                </Offset>
              </Anchor>
            </Anchors>
            <FontString inherits="ChatFontNormal"/>
          </EditBox>

          <!-- Delay Section -->
